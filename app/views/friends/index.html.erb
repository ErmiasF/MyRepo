<% if user_signed_in? %>
<h1>Friends List</h1>

<table class="table table-striped table-responsive table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Fullname</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if current_user == friend.user%>
      <tr>
        <td> <%= link_to friend.first_name + ' ' + friend.last_name, friend %></td> 
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.facebook %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-sm btn-outline-info" %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger"%></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1> Hello World! </h1>
This my first Rails Webpage...
<%  end %>