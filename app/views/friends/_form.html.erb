<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name, class:"col-sm-2 col-form-label" %> 
    <div class="col-sm-4">
      <%= form.text_field :first_name, class:"form-control" %>
    </div>
    
  <div class="field">
    <%= form.label :last_name, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :last_name, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :email, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :email, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :phone, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :phone, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :facebook, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :facebook, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <% form.label :user_id, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.number_field :user_id, class:"form-control", id: :friend_user_id, value: current_user.id, type: :hidden  %>
    </div>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
  <br/>
<% end %>
